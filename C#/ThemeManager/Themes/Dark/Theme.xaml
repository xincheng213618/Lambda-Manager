<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="GlobalBackgroundColor">#161616</Color>
    <Color x:Key="GlobalBroderBrushColor">#212121</Color>
    <Color x:Key="GlobalTextColor">White</Color>
    
    <Color x:Key="SelectedBackgroundColor">#FFC5CBF9</Color>
    <Color x:Key="SelectedUnfocusedColor">#FFDDDDDD</Color>

    <SolidColorBrush x:Key="GlobalBackground" Color="{StaticResource GlobalBackgroundColor}" />
    <SolidColorBrush x:Key="GlobalBorderBrush" Color="{StaticResource GlobalBroderBrushColor}"/>

    <SolidColorBrush x:Key="GlobalTextBrush"  Color="{StaticResource GlobalTextColor}" />

    <SolidColorBrush x:Key="StatusBarBackgroundBrush"   Color="#CA5100"/>
    <SolidColorBrush x:Key="MeasureBackground" Color="{StaticResource GlobalBackgroundColor}"/>
    
    <SolidColorBrush x:Key="MeasureBarBackgroundBrush" Color="#3F3F46"/>



    <SolidColorBrush x:Key="CaptionButtonBrush">white</SolidColorBrush>
    <SolidColorBrush x:Key="CaptionButtonForeground">white</SolidColorBrush>
    <SolidColorBrush x:Key="WindowIsNotActiveForeground">#d7d7d7</SolidColorBrush>
    <SolidColorBrush x:Key="CaptionButtonChoiceBrush">white</SolidColorBrush>
    <SolidColorBrush x:Key="CaptionButtonChoiceBackgrouundBrush">#888888</SolidColorBrush>
    <SolidColorBrush x:Key="CaptionButtonCloseBrush" Color="Red"/>
    
    


    <!--MenuItem-->
    <SolidColorBrush x:Key="MenuBrushKey"   Color="{DynamicResource GlobalBackgroundColor}"/>
    <SolidColorBrush x:Key="MenuHighBrushKey"   Color="#2E2E2E"/>
    <SolidColorBrush x:Key="SubMenuBrushKey"   Color="#252526"/>
    <SolidColorBrush x:Key="SubMenuBorderBrushKey"   Color="#424242"/>

    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent" />

    <SolidColorBrush x:Key="MenuItemSeparatorFillTop" Color="#BEC3CB" />
    <SolidColorBrush x:Key="MenuItemSeparatorFillBottom" Color="Transparent" />

    <SolidColorBrush x:Key="SystemColorsMenuText" Color="White" />

    <SolidColorBrush  x:Key="ControlShadow" Color="#71000000" />

    <SolidColorBrush x:Key="toplevelmenuheaderhoverborder" Color="Transparent" />
    <SolidColorBrush x:Key="toplevelmenuheaderhover" Color="#FF3E3E40" />
    <SolidColorBrush x:Key="menuitemglyphpanelborderbrush" Color="#3E3E40" />
    <SolidColorBrush x:Key="MenuItemHighlightedInnerBorder" Color="#3D3D3D" />
    <SolidColorBrush x:Key="MenuItemDisabledForeground" Color="#505050" />
    <SolidColorBrush x:Key="MenuItemDisabledGlyphPanelBackground" Color="#FF656565" />

    <SolidColorBrush x:Key="MenuItemDisabledGlyphFill" Color="#C0C0C0" />
    <SolidColorBrush x:Key="environmentcommandbar"  Color="#FFCFD6E5"  />
    <SolidColorBrush x:Key="environmentcommandbaricon" Color="#FF2D2D30" />
    <SolidColorBrush x:Key="EnvironmentCommandBarMenuMouseOverSubmenuGlyph" Color="#FF007ACC" />
    <SolidColorBrush x:Key="environmentcommandbarmenuseparator" Color="#FF000000" />
    <SolidColorBrush x:Key="EnvironmentCommandBarCheckBox" Color="#FF999999" />
    <SolidColorBrush x:Key="EnvironmentCommandBarSelectedIcon" Color="#FF2D2D30" />
    <SolidColorBrush x:Key="EnvironmentCommandBarCheckBoxMouseOver" Color="#FFF1F1F1" />
    <SolidColorBrush x:Key="EnvironmentCommandBarHoverOverSelectedIcon" Color="#FF3E3E40" />
    <SolidColorBrush x:Key="EnvironmentCommandBarMenuItemMouseOver" Color="#3D3D3D" />

    <SolidColorBrush x:Key="ContextMenuBackground" Color="#FF2E2E2E" />
    <SolidColorBrush x:Key="ContextMenuBorderBrush" Color="#FF424242" />
    <SolidColorBrush x:Key="ContextMenuRectangleFill" Color="#2E2E2E" />



</ResourceDictionary>




