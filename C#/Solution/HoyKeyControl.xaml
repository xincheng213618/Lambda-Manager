<UserControl x:Class="Solution.HoyKeyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Solution" 
             xmlns:hotKey="clr-namespace:HotKey;assembly=HotKey"
             d:DataContext="{d:DesignInstance Type=hotKey:HotKeys}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" >
        <Label Content="{Binding Name}" Width="100"/>
        <TextBox  x:Name="HotkeyTextBox"  Width="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" IsReadOnlyCaretVisible="False" IsUndoEnabled="False"  PreviewKeyDown="HotkeyTextBox_PreviewKeyDown" >
        </TextBox>
        <Label Content="{Binding IsRegistered}" Width="100"/>
    </StackPanel>
</UserControl>
