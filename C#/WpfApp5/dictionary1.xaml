                            <ContentPresenter x:Name="HeaderContent"  Margin="0,0,0,0" RecognizesAccessKey="True"  VerticalAlignment="{TemplateBinding VerticalContentAlignment}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                        <Thumb x:Name="PART_HeaderGripper"   HorizontalAlignment="Right"  Margin="0,0,-9,0"  Style="{StaticResource GridViewColumnHeaderGripper}" />
