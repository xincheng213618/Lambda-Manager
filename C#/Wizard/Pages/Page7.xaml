<Page x:Class="Wizard.Pages.Page7"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wizard.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="Page7">

    <Border Margin="10,10"  CornerRadius="10" Background="#444444">
        <Grid Margin="10">
            <TextBlock Text="软件向导"  FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0"/>
            <TextBlock Text="软件成像分辨率配置" Foreground="White" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="top" Height="50"  Margin="0,30,0,0"></TextBlock>
            <Grid Margin="120" Width="240">
                <Border CornerRadius="4" BorderThickness="1" BorderBrush="Black">
                    <StackPanel Orientation="Vertical" Width="200" Margin="-10,10,0,0" Name="Stackpanel" >
                    </StackPanel>
                </Border>
            </Grid>
           
            <DockPanel  VerticalAlignment="Bottom" HorizontalAlignment="Right"  >
                <Button Margin="5,0" Padding="10,5"  Content="上一步"  Click="Button1_Click"/>
                <Button Margin="5,0" Padding="10,5"   Content="关闭"  Click="Button_Click" />

            </DockPanel>

        </Grid>
    </Border>
</Page>
