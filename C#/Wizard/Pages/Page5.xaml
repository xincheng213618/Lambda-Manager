<Page x:Class="Wizard.Page5"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wizard"
      xmlns:Controls="clr-namespace:Global.Common.Controls;assembly=Global.Common" 
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="Page2" Initialized="Page_Initialized">

    <Border Margin="10,10"  CornerRadius="10">
        <Grid Margin="10">
            <TextBlock Text="软件向导"  FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBlock Text="第三步" HorizontalAlignment="Center" FontSize="20"   VerticalAlignment="Top" Margin="0,80,0,0"/>
            <TextBlock Text="自检中" HorizontalAlignment="Center" FontSize="20"   VerticalAlignment="Top" Margin="0,140,0,0"/>
            <Border Background="#484d4f"  Height="100"  VerticalAlignment="Top"  CornerRadius="4" Margin="100,180,100,0" >
                <Grid Background="#333333" Margin="5,5,5,5">
                    <ScrollViewer x:Name="ScrollViewer1"  VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
                        <StackPanel x:Name="ShowStackPanel" Margin="5">

                        </StackPanel>
                    </ScrollViewer>
                    <ProgressBar  x:Name="ProgressBar"  Height="5"  Foreground="Green" Background="#484d4f" BorderThickness="0"  VerticalAlignment="Bottom"  Margin="0,-5"/>
                </Grid>
            </Border>

            <DockPanel  VerticalAlignment="Bottom" HorizontalAlignment="Right"  >
                <!--<Button Margin="5,0" Padding="10,5"  Content="上一步"  Click="Button1_Click" />-->


                <!--<Button Margin="5,0" Padding="10,5"   Content="下一步"  Click="Button_Click"/>-->


            </DockPanel>

        </Grid>
    </Border>
</Page>
