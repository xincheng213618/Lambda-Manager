            <Border Background="#484d4f"  Margin="10" CornerRadius="4">
                <Grid Background="#333333" Margin="5,5,5,20">
                    <StackPanel x:Name="ShowStackPanel" Margin="5">

                    </StackPanel>
                </Grid>
            </Border>
        </Border>



    </Grid>
